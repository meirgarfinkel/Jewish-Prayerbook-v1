<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/birchatScrollView"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activities.BirchatHamazonActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/birchat1"
            style="@style/standard_tv"
            android:text="@string/birchat_hamazon_1_hazan_to_nodeh_lecha" />

        <TextView
            android:id="@+id/birchat1a"
            style="@style/standard_tv"
            android:layout_height="0dp" />

        <TextView
            android:id="@+id/birchat2"
            style="@style/standard_tv"
            android:text="@string/birchat_hamazon_2_al_hakol_to_rachem" />

        <TextView
            android:id="@+id/birchat3"
            style="@style/standard_tv"
            android:text="@string/birchat_hamazon_3_uvneh_to_bamarom" />

        <TextView
            android:id="@+id/birchat4"
            style="@style/standard_tv"
            android:text="@string/birchat_hamazon_4a_yizakeinu_magdil" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>