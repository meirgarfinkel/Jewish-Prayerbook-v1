<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Theme.Siddur" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textColorPrimary">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="appBarLayoutStyle"> @id/action_bar</item>
    </style>

    <style name="Theme.BlackActionBar" parent="Theme.Siddur">
        <item name="backgroundColor">@color/teal_700</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Theme.MainButtons" parent="Theme.Siddur">
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="android:textColor">#C6C7C7</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="rippleColor">@color/teal_700</item>
        <item name="android:layout_height">73dp</item>
        <item name="android:layout_width">0dp</item>
    </style>

    <style name="Theme.Siddur.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Siddur.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Siddur.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>